package tp.dominio;

public class Edge {
	int origen;
	int destino;
	long[] datos = new long[4]; // 0 tiempo, 1 dist, 2 costo, 3 flow;
	
	public Edge(Ruta ruta) {
		this.origen = ruta.getOrigen().getId();
		this.destino = ruta.getDestino().getId();
		this.datos[0] = (long) ruta.getTiempoViaje();
		this.datos[1] = (long) ruta.getDistancia();
		this.datos[2] = (long) ruta.getCosto();
		this.datos[3] = (long) ruta.getMaxPasajeros();
	}
	public int getOrigen() {
		return this.origen;
	}
	public int getDestino() {
		return this.destino;
	}
	public long getDato(int tipo) {
		return this.datos[tipo];
	}

	public static Object compare(Edge edge, Edge edge2, int prioridad) {
		// TODO Auto-generated method stub
		// primero pregunto por la prioridad segun el dijk
		if(edge.getDato(prioridad) < edge2.getDato(prioridad)) return edge;
		if(edge.getDato(prioridad) > edge2.getDato(prioridad)) return edge2;
		// despues pregunto por el costo
		if(edge.getDato(2) < edge2.getDato(2)) return edge;
		if(edge.getDato(2) > edge2.getDato(2)) return edge2;
		//si son iguales devuelvo el primero, cuidado TLE
		return edge;
	}
}
